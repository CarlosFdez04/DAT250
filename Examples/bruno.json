{
  "version": "1",
  "name": "Examples",
  "type": "collection",
  "ignore": [
    "node_modules",
    ".git"
  ],
  "requests": [
    {
      "name": "Create a new user",
      "request": {
        "method": "POST",
        "url": "http://localhost:8080/users",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user1\",\n  \"email\": \"user1@example.com\"\n}"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "List all users (after creating user1)",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/users",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "Create another user",
      "request": {
        "method": "POST",
        "url": "http://localhost:8080/users",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user2\",\n  \"email\": \"user2@example.com\"\n}"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "List all users (after creating user2)",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/users",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "User 1 creates a new poll",
      "request": {
        "method": "POST",
        "url": "http://localhost:8080/polls",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"question\": \"Do you like coding?\",\n  \"validUntil\": \"2024-09-15T00:00:00Z\",\n  \"publishedAt\": \"2024-09-01T00:00:00Z\"\n}"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "List all polls",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/polls",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "User 2 votes on the poll",
      "request": {
        "method": "POST",
        "url": "http://localhost:8080/votes",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"publishedAt\": \"2024-09-01T00:05:00Z\"\n}"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "User 2 changes his vote",
      "request": {
        "method": "PUT",
        "url": "http://localhost:8080/votes/1",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"publishedAt\": \"2024-09-01T00:10:00Z\"\n}"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "List all votes",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/votes",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "Delete the poll",
      "request": {
        "method": "DELETE",
        "url": "http://localhost:8080/polls/1",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "name": "List all votes after poll deletion (should be empty)",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/votes",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    }
  ]
}
